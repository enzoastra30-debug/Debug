--//VERO UI LIBRARY\\--

--//SERVICES
local Players = game:GetService("Players")
local tween = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

--//CONSTRUCTOR VAR
local Vero_UI = {}
Vero_UI.__index = Vero_UI

--//CONSTRUCTOR
function Vero_UI.window(config)
    local self = setmetatable({}, Vero_UI)

    self.Config = config
    self.Tabs = {}
    self.ActiveTab = nil
    self.PanelOpen = false

    self:_createGui()
    self:_createBar()
    self:_createPanel()

    --//DEBUG
    --------------------------------
    self:_bindDebugDestroy()
    --------------------------------

    return self
end

------------------------------------------------

--//SUB-CONSTRUCTORS

--Screen Gui
function Vero_UI:_createGui()
    local gui = Instance.new("ScreenGui")
    gui.Name = "Vero_UI"
    gui.ResetOnSpawn = false
    gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

    self.Gui = gui
end

--The Horizontal Bar
function Vero_UI:_createBar()
    local bar = Instance.new("Frame")
    bar.Name = "Bar"
    bar.Size = UDim2.fromOffset(1, 38)
    bar.Position = UDim2.fromScale(0.5, 0.05)
    bar.AnchorPoint = Vector2.new(0.5, 0)
    bar.BackgroundColor3 = Color3.fromRGB(24, 24, 24)
    bar.ZIndex = 2
    bar.Parent = self.Gui

    Instance.new("UICorner", bar).CornerRadius = UDim.new(0, 8)

    local layout = Instance.new("UIListLayout")
    layout.FillDirection = Enum.FillDirection.Horizontal
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    layout.VerticalAlignment = Enum.VerticalAlignment.Center
    layout.Padding = UDim.new(0, 8)
    layout.Parent = bar

    self.Bar = bar
    self:_makeDraggable(self.Bar)
end

--Sliding Panel
function Vero_UI:_createPanel()
    local panel = Instance.new("Frame")
    panel.Name = "Panel"
    panel.Position = UDim2.new(0.5, 0, 0, (self.Bar.Position.Y.Offset + 75))
    panel.AnchorPoint = Vector2.new(0.5, 0)
    panel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    panel.ClipsDescendants = true
    panel.Parent = self.Gui

    Instance.new("UICorner", panel).CornerRadius = UDim.new(0, 8)

    self.Panel = panel
    self.PanelOffsetY = 30
end

------------------------------------------------

--//TAB SYSTEM\\--

--Tab object class
local tabFunc = {}
tabFunc.__index = tabFunc

--Create tab
function Vero_UI:tab(tabName)

    local btn = Instance.new("TextButton")
    btn.Name = "Tab Button"
    btn.Size = UDim2.fromOffset(80, 28)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    btn.Text = tabName
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 13
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.AutoButtonColor = false
    btn.ZIndex = 3
    btn.Parent = self.Bar

    self.Bar.Size += UDim2.fromOffset(90, 0)
    self.Panel.Size += UDim2.fromOffset(90, 0)

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)

    --Scrolling frame for the tab Page
    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = tabName.. "_Page"
    scroll.Size = UDim2.new(1, 0, 1, 0)
    scroll.CanvasSize = UDim2.fromScale(0, 0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ScrollBarImageTransparency = 0.5
    scroll.BackgroundTransparency = 1
    scroll.Visible = false
    scroll.Parent = self.Panel

    local padding = Instance.new("UIPadding")
    padding.PaddingTop = UDim.new(0, 8)
    padding.PaddingBottom = UDim.new(0, 8)
    padding.PaddingLeft = UDim.new(0, 8)
    padding.PaddingRight = UDim.new(0, 8)
    padding.Parent = scroll

    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 8)
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    layout.Parent = scroll

   -- store in Tabs table for toggling
    self.Tabs[tabName] = {
        Button = btn,
        Scroll = scroll
    }

    -- create tab instance
    local tabInstance = setmetatable({}, tabFunc)
    tabInstance.Scroll = scroll

    btn.MouseButton1Click:Connect(function()
        self:_toggleTab(tabName)
    end)

    return tabInstance
end

------------------------------------------------

--//BAR LOGIC\\--

function Vero_UI:_makeDraggable(frame)
    local dragging = false
    local dragInput, mousePos, framePos

    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            mousePos = input.Position
            framePos = frame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - mousePos
            local newPos = UDim2.new(
                framePos.X.Scale,
                framePos.X.Offset + delta.X,
                framePos.Y.Scale,
                framePos.Y.Offset + delta.Y
            )
            frame.Position = newPos

            if self.Panel then
                -- panel follows bar with fixed offset
                self.Panel.Position = UDim2.new(
                    newPos.X.Scale,
                    newPos.X.Offset,
                    newPos.Y.Scale,
                    newPos.Y.Offset + self.PanelOffsetY
                )
            end
        end
    end)
end

------------------------------------------------

--//TAB LOGIC\\--

--Toggle Tab
function Vero_UI:_toggleTab(tabName)
  -- Close previously active tab scroll (clicked new tab without closing)
    if self.ActiveTab and self.Tabs[self.ActiveTab] then
        self.Tabs[self.ActiveTab].Scroll.Visible = false
    end

    -- Same tab clicked â†’ close panel 
    if self.ActiveTab == tabName and self.PanelOpen then
        self:_setPanel(false)
        self.ActiveTab = nil
        return
    end

    -- Set new active tab
    self.ActiveTab = tabName
    self:_setPanel(true)
    if self.Tabs[tabName] then
        self.Tabs[tabName].Scroll.Visible = true
    end
end

--Set Sliding Panel
function Vero_UI:_setPanel(open)
    self.PanelOpen = open

    local goal = {
        Size = UDim2.fromOffset(
            self.Panel.Size.X.Offset,
            open and (self.Config.MaxPanelHeight or 240) or 0
        ),
    }

    local tweenGoal = tween:Create(
        self.Panel,
        TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        goal
    )
    tweenGoal:Play()
    tweenGoal.Completed:Connect(function()
        if onComplete then
            onComplete()
        end
    end)
end

------------------------------------------------

--//TAB ELEMENTS\\--

--Checkbox
function tabFunc:checkbox(text, default, callback)
    default = default or false

    local boxFrame = Instance.new("Frame")
    boxFrame.Size = UDim2.new(1, -10, 0, 30)
    boxFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    boxFrame.Parent = self.Scroll

    local uic = Instance.new("UICorner", boxFrame)
    uic.CornerRadius = UDim.new(0, 6)

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -30, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = boxFrame

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 20, 0, 20)
    button.Position = UDim2.new(1, -25, 0.5, -10)
    button.BackgroundColor3 = default and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(60, 60, 60)
    button.Text = ""
    button.Parent = boxFrame

    local uic2 = Instance.new("UICorner", button)
    uic2.CornerRadius = UDim.new(0, 4)

    local toggled = default
    button.MouseButton1Click:Connect(function()
        toggled = not toggled
        button.BackgroundColor3 = toggled and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(60, 60, 60)
        if callback then
            callback(toggled)
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

-----------------

--Button
function tabFunc:button(text, callback)
    local btnFrame = Instance.new("Frame")
    btnFrame.Size = UDim2.new(1, -10, 0, 30)
    btnFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btnFrame.Parent = self.Scroll

    local uic = Instance.new("UICorner", btnFrame)
    uic.CornerRadius = UDim.new(0, 6)

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -20, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = btnFrame

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 1, 0)
    button.BackgroundTransparency = 1
    button.Text = ""
    button.Parent = btnFrame

    button.MouseButton1Click:Connect(function()
        if callback then
            callback()
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

-----------------

--Keybind
function tabFunc:keybind(text, defaultKey, callback)
    local key = defaultKey or "None"
    local listening = false

    -- Create frame
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -10, 0, 30)
    frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    frame.Parent = self.Scroll

    local uic = Instance.new("UICorner", frame)
    uic.CornerRadius = UDim.new(0, 6)

    -- Label for keybind name
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.6, -10, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    -- Display button for current key
    local keyBtn = Instance.new("TextButton")
    keyBtn.Size = UDim2.new(0.35, -10, 0.7, 0)
    keyBtn.Position = UDim2.new(0.65, 5, 0.15, 0)
    keyBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    keyBtn.Text = key
    keyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    keyBtn.TextSize = 14
    keyBtn.Parent = frame

    local uic2 = Instance.new("UICorner", keyBtn)
    uic2.CornerRadius = UDim.new(0, 4)

    -- Listen for rebinding when button clicked
    keyBtn.MouseButton1Click:Connect(function()
        listening = true
        keyBtn.Text = "Press a key..."
    end)

    -- Listen for key input to assign
    local inputConnection
    inputConnection = game:GetService("UserInputService").InputBegan:Connect(function(input, gp)
        if gp then return end
        if listening and input.UserInputType == Enum.UserInputType.Keyboard then
            if input.KeyCode == Enum.KeyCode.Backspace then
                key = "None"
            else
                key = tostring(input.KeyCode):gsub("Enum.KeyCode.", "")
            end
            keyBtn.Text = key
            listening = false
        elseif not listening and key ~= "None" then
            -- Trigger callback if assigned key pressed
            if input.UserInputType == Enum.UserInputType.Keyboard and tostring(input.KeyCode):gsub("Enum.KeyCode.", "") == key then
                if callback then
                    callback()
                end
            end
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

-----------------

--Slider
function tabFunc:slider(text, min, max, default, callback)
    min = min or 0
    max = max or 100
    default = default or min

    local value = default

    -- Container frame
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -10, 0, 40)
    frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    frame.Parent = self.Scroll

    local uic = Instance.new("UICorner", frame)
    uic.CornerRadius = UDim.new(0, 6)

    -- Label for slider name
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.6, -10, 0.5, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    -- Label to display value
    local valueLabel = Instance.new("TextLabel")
    valueLabel.Size = UDim2.new(0.35, -10, 0.5, 0)
    valueLabel.Position = UDim2.new(0.65, 5, 0, 0)
    valueLabel.BackgroundTransparency = 1
    valueLabel.Text = tostring(value)
    valueLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    valueLabel.TextSize = 14
    valueLabel.TextXAlignment = Enum.TextXAlignment.Right
    valueLabel.Parent = frame

    -- Slider bar
    local sliderBar = Instance.new("Frame")
    sliderBar.Size = UDim2.new(0.95, 0, 0.25, 0)
    sliderBar.Position = UDim2.new(0.025, 0, 0.65, 0)
    sliderBar.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    sliderBar.Parent = frame

    local sliderUIC = Instance.new("UICorner", sliderBar)
    sliderUIC.CornerRadius = UDim.new(0, 4)

    -- Slider handle
    local handle = Instance.new("Frame")
    handle.Size = UDim2.new(0, 15, 1, 0)
    handle.Position = UDim2.new((value - min)/(max - min), 0, 0, 0)
    handle.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    handle.Parent = sliderBar

    local handleUIC = Instance.new("UICorner", handle)
    handleUIC.CornerRadius = UDim.new(0, 4)

    -- Dragging logic
    local dragging = false

    handle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
        end
    end)

    handle.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local relativeX = math.clamp(input.Position.X - sliderBar.AbsolutePosition.X, 0, sliderBar.AbsoluteSize.X)
            local scale = relativeX / sliderBar.AbsoluteSize.X
            value = math.floor(min + scale * (max - min) + 0.5) -- round to int
            handle.Position = UDim2.new(scale, 0, 0, 0)
            valueLabel.Text = tostring(value)
            if callback then
                callback(value)
            end
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

------------------------------------------------

--//DEBUG
function Vero_UI:_bindDebugDestroy()
    UIS.InputBegan:Connect(function(input, gp)
        if gp then return end
        if not self.Gui then return end

        if input.KeyCode == Enum.KeyCode.Delete then
            if self.Gui then
                self.Gui:Destroy()
            end
        end
    end)
end

------------------------------------------------

local UI = Vero_UI.window({
    Title = "My UI",
})

local tab1 = UI:tab("tab1")
local tab2 = UI:tab("tab2")
local tab3 = UI:tab("tab3")

--//Checkbox test
tab1:checkbox("Enable feature", false, function(state)
    print("Checkbox is now:", state)
end)

--//Button Test
tab1:button("test Button", function()
    print(("Button Pressed"))
end)

--//Keybind Test
tab1:keybind("Test Keybind", "Q", function()
    print(("keybind pressed"))
end)

--//Slider Test
tab1:slider("slider test", 0, 10, 0, function(value)
    print((value))
end)
