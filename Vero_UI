--//Section Box
function tabFunc:section(title, height)
    local Section = Instance.new("Frame")
    Section.Name = "Section"
    Section.Size = UDim2.new(1, -12, 0, height or 120)
    Section.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Section.BorderSizePixel = 0
    Section.Name = "SectionBox"
    Section.Parent = self.Scroll

    Instance.new("UICorner", Section).CornerRadius = UDim.new(0, 8)

    -- Optional stroke
    local stroke = Instance.new("UIStroke")
    stroke.Thickness = 1
    stroke.Color = Color3.fromRGB(40, 40, 40)
    stroke.Parent = Section

    -- Title
    local Title = Instance.new("TextLabel")
    Title.BackgroundTransparency = 1
    Title.Size = UDim2.new(1, -10, 0, 20)
    Title.Position = UDim2.fromOffset(8, 4)
    Title.Text = title or "Section"
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.TextYAlignment = Enum.TextYAlignment.Center
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 12
    Title.TextColor3 = Color3.fromRGB(220, 220, 220)
    Title.Parent = Section

    -- Content holder
    local Content = Instance.new("Frame")
    Content.Name = "Content"
    Content.BackgroundTransparency = 1
    Content.Position = UDim2.fromOffset(8, 28)
    Content.Size = UDim2.new(1, -16, 1, -36)
    Content.Parent = Section

    -- Layout (optional, but VERY useful)
    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 6)
    layout.Parent = Content

    -- Return an object, not just the frame
    return {
        Frame = Section,
        Content = Content,

        SetSize = function(_, newHeight)
            Section.Size = UDim2.new(1, -12, 0, newHeight)
        end
    }
end

-----------------

--//SearchBar
function tabFunc:search(placeholder)
    placeholder = placeholder or "Search..."

    local container = Instance.new("Frame")
    container.Size = UDim2.new(1, -10, 0, 34)
    container.BackgroundColor3 = Color3.fromRGB(40,40,40)
    container.Name = "SearchBar"
    container.Parent = self.Scroll

    Instance.new("UICorner", container).CornerRadius = UDim.new(0, 6)

    local box = Instance.new("TextBox")
    box.Size = UDim2.new(1, -20, 1, 0)
    box.Position = UDim2.new(0, 10, 0, 0)
    box.BackgroundTransparency = 1
    box.PlaceholderText = placeholder
    box.Text = ""
    box.ClearTextOnFocus = false
    box.TextColor3 = Color3.fromRGB(230, 230, 230)
    box.PlaceholderColor3 = Color3.fromRGB(140, 140, 140)
    box.TextSize = 12
    box.Font = Enum.Font.Gotham
    box.TextXAlignment = Enum.TextXAlignment.Left
    box.Parent = container

    -- Cache elements that can be filtered
    local elements = {}

    task.defer(function()
        for _, child in ipairs(self.Scroll:GetChildren()) do
            if child:IsA("Frame")
                and child ~= container
                and child.Name ~= "SearchBar" then
                table.insert(elements, child)
            end
        end
    end)

    local function matches(frame, query)
        query = query:lower()

        for _, obj in ipairs(frame:GetDescendants()) do
            if obj:IsA("TextLabel") or obj:IsA("TextButton") then
                if tostring(obj.Text):lower():find(query, 1, true) then
                    return true
                end
            end
        end

        return false
    end

    box:GetPropertyChangedSignal("Text"):Connect(function()
        local text = box.Text:lower()

        for _, frame in ipairs(elements) do
            local show = (text == "") or matches(frame, text)
            frame.Visible = show
        end

        -- Resize canvas after filtering
        task.wait()
        local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
        if layout then
            local total = 0
            for _, v in ipairs(self.Scroll:GetChildren()) do
                if v:IsA("Frame") and v.Visible then
                    total += v.Size.Y.Offset + layout.Padding.Offset
                end
            end
            self.Scroll.CanvasSize = UDim2.new(0, 0, 0, total)
        end
    end)
end

-----------------

--//TextLabel
function tabFunc:textlabel(text, callback)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -10, 0, 24)
    label.BackgroundColor3 = Color3.fromRGB(40,40,40)
    label.BorderSizePixel = 0
    label.TextWrapped = true
    label.TextXAlignment = Enum.TextXAlignment.Center
    label.TextYAlignment = Enum.TextYAlignment.Center
    label.Font = Enum.Font.Gotham
    label.TextSize = 14
    label.TextColor3 = Color3.fromRGB(220, 220, 220)
    label.Text = text or ""

    -- Auto height
    local constraint = Instance.new("UITextSizeConstraint")
    constraint.MaxTextSize = 14
    constraint.Parent = label

    -- Let it resize based on text
    task.defer(function()
        local bounds = label.TextBounds
        label.Size = UDim2.new(1, -10, 0, math.max(24, bounds.Y + 6))
    end)

    -- Callback hook
    if callback then
        callback(label)
    end

    -- Parent LAST to preserve order
    label.Parent = self.Scroll

    return label
end

