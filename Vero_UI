--//VERO FUNCTIONS\\--

--//Confirm/Deny Pop-up
function Vero_UI:confirm(Title, Desc, config)
    config = config or {}

    local title = Title or "Confirm"
    local desc = Desc or ""
    local showDecline = config.ShowDecline or false

    local onConfirm = config.confirm
    local onDecline = config.decline

    -- Overlay
    local overlay = Instance.new("Frame")
    overlay.Size = UDim2.fromScale(1, 1)
    overlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    overlay.BackgroundTransparency = 1
    overlay.ZIndex = 100
    overlay.Name = "Pop-Up"
    overlay.Parent = self.Gui

    -- Modal box
    local modal = Instance.new("Frame")
    modal.Size = UDim2.fromOffset(300, 160)
    modal.Position = UDim2.fromScale(0.5, 0.5)
    modal.AnchorPoint = Vector2.new(0.5, 0.5)
    modal.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    modal.BorderSizePixel = 0
    modal.ZIndex = 101
    modal.Parent = overlay

    -- Corner
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 8)
    corner.Parent = modal

    -- Title
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Text = title
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 18
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Size = UDim2.new(1, -20, 0, 30)
    titleLabel.Position = UDim2.fromOffset(10, 10)
    titleLabel.ZIndex = 102
    titleLabel.TextWrapped = true
    titleLabel.Parent = modal

    -- Description
    local descLabel = Instance.new("TextLabel")
    descLabel.Text = desc
    descLabel.Font = Enum.Font.Gotham
    descLabel.TextWrapped = true
    descLabel.TextSize = 14
    descLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    descLabel.BackgroundTransparency = 1
    descLabel.TextXAlignment = Enum.TextXAlignment.Left
    descLabel.TextYAlignment = Enum.TextYAlignment.Top
    descLabel.Size = UDim2.new(1, -20, 0, 60)
    descLabel.Position = UDim2.fromOffset(10, 45)
    descLabel.ZIndex = 102
    descLabel.TextWrapped = true
    descLabel.Parent = modal

    -- Buttons container
    local buttons = Instance.new("Frame")
    buttons.Size = UDim2.new(1, -20, 0, 40)
    buttons.Position = UDim2.new(0, 10, 1, -50)
    buttons.BackgroundTransparency = 1
    buttons.ZIndex = 102
    buttons.Parent = modal

    -- Accept button
    local accept = Instance.new("ImageButton")
    accept.Size = UDim2.fromOffset(40, 40)
    accept.AnchorPoint = Vector2.new(0.5, 0.5)
    accept.Position = showDecline
        and UDim2.new(0.75, 0, 0.5, 0)
        or UDim2.new(0.5, 0, 0.5, 0)

    accept.Image = "rbxassetid://73965231027852"
    accept.BackgroundTransparency = 1
    accept.ZIndex = 103
    accept.Parent = buttons

    -- Decline button (optional)
    local decline
    if showDecline then
        decline = Instance.new("ImageButton")
        decline.Size = UDim2.fromOffset(40, 40)
        decline.AnchorPoint = Vector2.new(0.5, 0.5)
        decline.Position = UDim2.new(0.25, 0, 0.5, 0)
        decline.Image = "rbxassetid://91091662291716"
        decline.BackgroundTransparency = 1
        decline.ZIndex = 103
        decline.Parent = buttons
    end

    tween:Create(modal, TweenInfo.new(0.25, Enum.EasingStyle.Back), {
        Size = UDim2.fromOffset(320, 180)
    }):Play()

    -- Close function
    local function close()
        local waitTime = .25
        local info = TweenInfo.new(waitTime)

        tween:Create(overlay, info, {
            BackgroundTransparency = 1
        }):Play()

        tween:Create(modal, info, {
            Size = UDim2.fromOffset(0, 0)
        }):Play()

        tween:Create(titleLabel, info, {
            TextTransparency = 1
        }):Play()

        tween:Create(descLabel, info, {
            TextTransparency = 1
        }):Play()

        tween:Create(accept, TweenInfo.new(.05), {
            ImageTransparency = 1
        }):Play()

        if showDecline then
            tween:Create(decline,TweenInfo.new(.05), {
                ImageTransparency = 1
            }):Play()
        end

        task.delay(waitTime, function()
            overlay:Destroy()
        end)
    end

    -- Button callbacks
    accept.MouseButton1Click:Connect(function()
        if onConfirm then onConfirm() end
        close()
    end)

    if decline then
        decline.MouseButton1Click:Connect(function()
            if onDecline then onDecline() end
            close()
        end)
    end
end

-----------------

--//Notification
function Vero_UI:notify(text, nType, duration)
    nType = nType or "info"
    duration = duration or 3

    local colors = {
        info = Color3.fromRGB(60, 130, 255),
        success = Color3.fromRGB(80, 200, 120),
        warning = Color3.fromRGB(255, 170, 60),
        error = Color3.fromRGB(255, 80, 80)
    }

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 0, 60)
    frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    frame.BackgroundTransparency = 0
    frame.Position = UDim2.new(1, 40, 0, 0) -- start off-screen
    frame.ZIndex = 51
    frame.Name = "Sub Notification"
    frame.Parent = self.Notifications

    Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)

    -- Accent bar
    local accent = Instance.new("Frame")
    accent.Size = UDim2.new(0, 4, 1, 0)
    accent.BackgroundColor3 = colors[nType] or colors.info
    accent.ZIndex = 52
    accent.Parent = frame

    Instance.new("UICorner", accent).CornerRadius = UDim.new(0, 8)

    -- Text
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -20, 1, -12)
    label.Position = UDim2.new(0, 12, 0, 6)
    label.BackgroundTransparency = 1
    label.TextWrapped = true
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.TextYAlignment = Enum.TextYAlignment.Center
    label.Text = text
    label.ZIndex = 52
    label.TextScaled = true
    label.TextColor3 = Color3.fromRGB(235, 235, 235)
    label.Font = Enum.Font.Gotham
    label.Parent = frame

    -- Slide in
    tween:Create(
        frame,
        TweenInfo.new(0.35, Enum.EasingStyle.Quart, Enum.EasingDirection.Out),
        {Position = UDim2.new(0, 0, 0, 0)}
    ):Play()

    -- Auto remove
    task.delay(duration, function()
        if frame and frame.Parent then
            tween:Create(
                frame,
                TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In),
                {Position = UDim2.new(1, 40, 0, 0), BackgroundTransparency = 1}
            ):Play()

            task.wait(0.3)
            frame:Destroy()
        end
    end)
end

------------------------------------------------

--//DEBUG
function Vero_UI:_bindDebugDestroy()
    UIS.InputBegan:Connect(function(input, gp)
        if gp then return end
        if not self.Gui then return end

        if input.KeyCode == Enum.KeyCode.Delete then
            if self.Gui then
                self.Gui:Destroy()
            end
        end
    end)
end

------------------------------------------------

return Vero_UI
