--//VERO UI LIBRARY\\--

--//SERVICES
local Players = game:GetService("Players")
local tween = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

--//CONSTRUCTOR VAR
local Vero_UI = {}
Vero_UI.__index = Vero_UI

--//CONSTRUCTOR
function Vero_UI.window(config)
    local self = setmetatable({}, Vero_UI)

    self.Config = config
    self.Tabs = {}
    self.ActiveTab = nil
    self.PanelOpen = false

    self:_createGui()

    --//DEBUG
    --------------------------------
    self:_bindDebugDestroy()
    --------------------------------

    self:_createBar()
    self:_createPanel()
    self:_playIntro()

    return self
end

------------------------------------------------

--//SUB-CONSTRUCTORS

--Screen Gui
function Vero_UI:_createGui()
    local gui = Instance.new("ScreenGui")
    gui.Name = "Vero_UI"
    gui.ResetOnSpawn = false
    gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

    self.Gui = gui
end

--The Horizontal Bar
function Vero_UI:_createBar()
    local bar = Instance.new("Frame")
    bar.Name = "Bar"
    bar.Size = UDim2.fromOffset(1, 38)
    bar.Position = UDim2.fromScale(0.5, 0.05)
    bar.AnchorPoint = Vector2.new(0.5, 0)
    bar.BackgroundColor3 = Color3.fromRGB(24, 24, 24)
    bar.ZIndex = 2
    bar.Parent = self.Gui

    Instance.new("UICorner", bar).CornerRadius = UDim.new(0, 8)

    local layout = Instance.new("UIListLayout")
    layout.FillDirection = Enum.FillDirection.Horizontal
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    layout.VerticalAlignment = Enum.VerticalAlignment.Center
    layout.Padding = UDim.new(0, 8)
    layout.Parent = bar

    self.Bar = bar
    self:_makeDraggable(self.Bar)
end

--Sliding Panel
function Vero_UI:_createPanel()
    local panel = Instance.new("Frame")
    panel.Name = "Panel"
    panel.Position = UDim2.new(0.5, 0, 0, (self.Bar.Position.Y.Offset + 75))
    panel.AnchorPoint = Vector2.new(0.5, 0)
    panel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    panel.ClipsDescendants = true
    panel.Parent = self.Gui

    Instance.new("UICorner", panel).CornerRadius = UDim.new(0, 8)

    self.Panel = panel
    self.PanelOffsetY = 30
end

--Intro for UI library
function Vero_UI:_playIntro()
    local bar = self.Bar

    --Left Arrow
    local arrowLeft = Instance.new("ImageLabel")
    arrowLeft.Name = "ArrowLeft"
    arrowLeft.Size = UDim2.new(0, 65, 0, 45)
    arrowLeft.Position = UDim2.new(.483,0,.3,0)
    arrowLeft.Image = "rbxassetid://16848361091"
    arrowLeft.Rotation = 90
    arrowLeft.BackgroundTransparency = 1
    arrowLeft.ImageColor3 = Color3.fromRGB(45, 45, 45)
    arrowLeft.BorderSizePixel = 0
    arrowLeft.Parent = self.Gui

    --Right Arrow
    local arrowRight = Instance.new("ImageLabel")
    arrowRight.Name = "ArrowRight"
    arrowRight.Size = UDim2.new(0, 65, 0, 45)
    arrowRight.Position = UDim2.new(.483,0,.3,0)
    arrowRight.Image = "rbxassetid://16848361091"
    arrowRight.Rotation = -90
    arrowRight.BackgroundTransparency = 1
    arrowRight.ImageColor3 = Color3.fromRGB(45, 45, 45)
    arrowRight.BorderSizePixel = 0
    arrowRight.Parent = self.Gui

    --Title
    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Position = UDim2.new(.446, 0, .287, 0)
    title.Size = UDim2.new(0, 82, 0, 67)
    title.BackgroundTransparency = 1
    title.BorderSizePixel = 0
    title.Text = "VER"
    title.TextScaled = true
    title.TextColor3 = Color3.fromRGB(243, 243, 243)
    title.FontFace = Font.new("", Enum.FontWeight.Bold, Enum.FontStyle.Normal)
    title.Parent = self.Gui

    --UI Stroke
    local Stroke = Instance.new("UIStroke")
    Stroke.Transparency = .5
    Stroke.Parent = title
end

------------------------------------------------

--//TAB SYSTEM\\--

--Tab object class
local tabFunc = {}
tabFunc.__index = tabFunc

--Create tab
function Vero_UI:tab(tabName)

    local btn = Instance.new("TextButton")
    btn.Name = "Tab Button"
    btn.Size = UDim2.fromOffset(80, 28)
    btn.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    btn.Text = tabName
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 13
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.AutoButtonColor = false
    btn.ZIndex = 3
    btn.Parent = self.Bar

    self.Bar.Size += UDim2.fromOffset(90, 0)
    self.Panel.Size += UDim2.fromOffset(90, 0)

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)

    --Scrolling frame for the tab Page
    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = tabName.. "_Page"
    scroll.Size = UDim2.new(1, 0, 1, 0)
    scroll.CanvasSize = UDim2.fromScale(0, 0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ScrollBarImageTransparency = 0.5
    scroll.BackgroundTransparency = 1
    scroll.Visible = false
    scroll.Parent = self.Panel

    local padding = Instance.new("UIPadding")
    padding.PaddingTop = UDim.new(0, 8)
    padding.PaddingBottom = UDim.new(0, 8)
    padding.PaddingLeft = UDim.new(0, 8)
    padding.PaddingRight = UDim.new(0, 8)
    padding.Parent = scroll

    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 8)
    layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    layout.Parent = scroll

   -- store in Tabs table for toggling
    self.Tabs[tabName] = {
        Button = btn,
        Scroll = scroll
    }

    -- create tab instance
    local tabInstance = setmetatable({}, tabFunc)
    tabInstance.Scroll = scroll

    btn.MouseButton1Click:Connect(function()
        self:_toggleTab(tabName)
    end)

    return tabInstance
end

------------------------------------------------

--//BAR LOGIC\\--

function Vero_UI:_makeDraggable(frame)
    local dragging = false
    local dragInput, mousePos, framePos

    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            mousePos = input.Position
            framePos = frame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - mousePos
            local newPos = UDim2.new(
                framePos.X.Scale,
                framePos.X.Offset + delta.X,
                framePos.Y.Scale,
                framePos.Y.Offset + delta.Y
            )
            frame.Position = newPos

            if self.Panel then
                -- panel follows bar with fixed offset
                self.Panel.Position = UDim2.new(
                    newPos.X.Scale,
                    newPos.X.Offset,
                    newPos.Y.Scale,
                    newPos.Y.Offset + self.PanelOffsetY
                )
            end
        end
    end)
end

------------------------------------------------

--//TAB LOGIC\\--

--Toggle Tab
function Vero_UI:_toggleTab(tabName)
  -- Close previously active tab scroll (clicked new tab without closing)
    if self.ActiveTab and self.Tabs[self.ActiveTab] then
        self.Tabs[self.ActiveTab].Scroll.Visible = false
    end

    -- Same tab clicked â†’ close panel 
    if self.ActiveTab == tabName and self.PanelOpen then
        self:_setPanel(false)
        self.ActiveTab = nil
        return
    end

    -- Set new active tab
    self.ActiveTab = tabName
    self:_setPanel(true)
    if self.Tabs[tabName] then
        self.Tabs[tabName].Scroll.Visible = true
    end
end

--Set Sliding Panel
function Vero_UI:_setPanel(open)
    self.PanelOpen = open

    local goal = {
        Size = UDim2.fromOffset(
            self.Panel.Size.X.Offset,
            open and (self.Config.MaxPanelHeight or 240) or 0
        ),
    }

    local tweenGoal = tween:Create(
        self.Panel,
        TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        goal
    )
    tweenGoal:Play()
    tweenGoal.Completed:Connect(function()
        if onComplete then
            onComplete()
        end
    end)
end

------------------------------------------------

--//TAB ELEMENTS\\--

--Checkbox
function tabFunc:checkbox(text, default, callback)
    default = default or false

    local boxFrame = Instance.new("Frame")
    boxFrame.Size = UDim2.new(1, -10, 0, 30)
    boxFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    boxFrame.Parent = self.Scroll

    local uic = Instance.new("UICorner", boxFrame)
    uic.CornerRadius = UDim.new(0, 6)

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -30, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 10
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = boxFrame

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 20, 0, 20)
    button.Position = UDim2.new(1, -25, 0.5, -10)
    button.BackgroundColor3 = default and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(60, 60, 60)
    button.Text = ""
    button.Parent = boxFrame

    local uic2 = Instance.new("UICorner", button)
    uic2.CornerRadius = UDim.new(0, 4)

    local toggled = default
    button.MouseButton1Click:Connect(function()
        toggled = not toggled
        button.BackgroundColor3 = toggled and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(60, 60, 60)
        if callback then
            callback(toggled)
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

