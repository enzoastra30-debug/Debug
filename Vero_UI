--Button
function tabFunc:button(text, callback)
    local btnFrame = Instance.new("Frame")
    btnFrame.Size = UDim2.new(1, -10, 0, 30)
    btnFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btnFrame.Parent = self.Scroll

    local uic = Instance.new("UICorner", btnFrame)
    uic.CornerRadius = UDim.new(0, 6)

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -20, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 10
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = btnFrame

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 1, 0)
    button.BackgroundTransparency = 1
    button.Text = ""
    button.Parent = btnFrame

    button.MouseButton1Click:Connect(function()
        if callback then
            callback()
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

-----------------

--Keybind
function tabFunc:keybind(text, defaultKey, callback)
    local key = defaultKey or "None"
    local listening = false

    -- Create frame
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -10, 0, 30)
    frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    frame.Parent = self.Scroll

    local uic = Instance.new("UICorner", frame)
    uic.CornerRadius = UDim.new(0, 6)

    -- Label for keybind name
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.6, -10, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 10
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    -- Display button for current key
    local keyBtn = Instance.new("TextButton")
    keyBtn.Size = UDim2.new(0.35, -10, 0.7, 0)
    keyBtn.Position = UDim2.new(0.65, 5, 0.15, 0)
    keyBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    keyBtn.Text = key
    keyBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    keyBtn.TextSize = 10
    keyBtn.Parent = frame

    local uic2 = Instance.new("UICorner", keyBtn)
    uic2.CornerRadius = UDim.new(0, 4)

    -- Listen for rebinding when button clicked
    keyBtn.MouseButton1Click:Connect(function()
        listening = true
        keyBtn.Text = "Press a key..."
    end)

    -- Listen for key input to assign
    local inputConnection
    inputConnection = game:GetService("UserInputService").InputBegan:Connect(function(input, gp)
        if gp then return end
        if listening and input.UserInputType == Enum.UserInputType.Keyboard then
            if input.KeyCode == Enum.KeyCode.Backspace then
                key = "None"
            else
                key = tostring(input.KeyCode):gsub("Enum.KeyCode.", "")
            end
            keyBtn.Text = key
            listening = false
        elseif not listening and key ~= "None" then
            -- Trigger callback if assigned key pressed
            if input.UserInputType == Enum.UserInputType.Keyboard and tostring(input.KeyCode):gsub("Enum.KeyCode.", "") == key then
                if callback then
                    callback()
                end
            end
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

-----------------

--Slider
function tabFunc:slider(text, min, max, default, callback)
    min = min or 0
    max = max or 100
    default = default or min

    local value = default

    -- Container frame
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, -10, 0, 40)
    frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    frame.Parent = self.Scroll

    local uic = Instance.new("UICorner", frame)
    uic.CornerRadius = UDim.new(0, 6)

    -- Label for slider name
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.6, -10, 0.5, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 10
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = frame

    -- Label to display value
    local valueLabel = Instance.new("TextLabel")
    valueLabel.Size = UDim2.new(0.35, -10, 0.5, 0)
    valueLabel.Position = UDim2.new(0.65, 5, 0, 0)
    valueLabel.BackgroundTransparency = 1
    valueLabel.Text = tostring(value)
    valueLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    valueLabel.TextSize = 14
    valueLabel.TextXAlignment = Enum.TextXAlignment.Right
    valueLabel.Parent = frame

    -- Slider bar
    local sliderBar = Instance.new("Frame")
    sliderBar.Size = UDim2.new(0.95, 0, 0.25, 0)
    sliderBar.Position = UDim2.new(0.025, 0, 0.65, 0)
    sliderBar.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    sliderBar.Parent = frame

    local sliderUIC = Instance.new("UICorner", sliderBar)
    sliderUIC.CornerRadius = UDim.new(0, 4)

    -- Slider handle
    local handle = Instance.new("Frame")
    handle.Size = UDim2.new(0, 15, 1, 0)
    handle.Position = UDim2.new((value - min)/(max - min), 0, 0, 0)
    handle.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
    handle.Parent = sliderBar

    local handleUIC = Instance.new("UICorner", handle)
    handleUIC.CornerRadius = UDim.new(0, 4)

    -- Dragging logic
    local dragging = false

    handle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
        end
    end)

    handle.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local relativeX = math.clamp(input.Position.X - sliderBar.AbsolutePosition.X, 0, sliderBar.AbsoluteSize.X)
            local scale = relativeX / sliderBar.AbsoluteSize.X
            value = math.floor(min + scale * (max - min) + 0.5) -- round to int
            handle.Position = UDim2.new(scale, 0, 0, 0)
            valueLabel.Text = tostring(value)
            if callback then
                callback(value)
            end
        end
    end)

    -- Update scrolling frame canvas
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight = totalHeight + v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

-----------------

--Dropdown
function tabFunc:dropdown(text, options, default, callback)
    options = options or {}
    default = default or options[1] or ""

    local container = Instance.new("Frame")
    container.Size = UDim2.new(1, -10, 0, 30)
    container.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    container.Name = "Container"
    container.Parent = self.Scroll

    Instance.new("UICorner", container).CornerRadius = UDim.new(0, 6)

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, -90, 1, 0)
    title.Position = UDim2.new(0, 10, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = text
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.TextSize = 10
    title.Name = "Title"
    title.Parent = container

    local valueButton = Instance.new("TextButton")
    valueButton.Size = UDim2.new(0, 70, 0, 20)
    valueButton.Position = UDim2.new(1, -80, 0.5, -10)
    valueButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    valueButton.Text = default
    valueButton.TextSize = 13
    valueButton.Name = "ValueButton"
    valueButton.Parent = container

    Instance.new("UICorner", valueButton).CornerRadius = UDim.new(0, 4)

    local listFrame = Instance.new("Frame")
    listFrame.Position = UDim2.new(1, -80, 0.5, -10)
    listFrame.Size = UDim2.new(0, 70, 0, 20)
    listFrame.BackgroundTransparency = 1
    listFrame.Visible = false
    listFrame.Name = "ListFrame"
    listFrame.Parent = container

    local layout = Instance.new("UIListLayout")
    layout.Padding = UDim.new(0, 4)
    layout.Parent = listFrame

    local open = false
    local selected = default

    local function recalcCanvas()
        task.wait()
        local total = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                total += v.Size.Y.Offset + 8
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, total)
    end

    for _, option in ipairs(options) do
        local opt = Instance.new("TextButton")
        opt.Size = UDim2.new(1, 0, 0, 22)
        opt.BackgroundColor3 = Color3.fromRGB(55, 55, 55)
        opt.Text = option
        opt.TextSize = 13
        opt.ZIndex = 5
        opt.Parent = listFrame

        Instance.new("UICorner", opt).CornerRadius = UDim.new(0, 4)

        opt.MouseButton1Click:Connect(function()
            selected = option
            valueButton.Text = option
            open = false

            listFrame.Visible = false
            container.Size = UDim2.new(1, -10, 0, 30)
            listFrame.Size = UDim2.new(1, -10, 0, 0)

            if callback then
                callback(option)
            end

            recalcCanvas()
        end)
    end

    valueButton.MouseButton1Click:Connect(function()
        open = not open

        listFrame.Visible = open
        listFrame.Size = UDim2.new(0, 70, 0, open and (#options * 26) or 0)
        recalcCanvas()
    end)

    recalcCanvas()
end

-----------------

--// GameBox
function tabFunc:gamebox(imageId, title, callback)
    local box = Instance.new("Frame")
    box.Size = UDim2.new(1, -10, 0, 120)
    box.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    box.ClipsDescendants = true
    box.Parent = self.Scroll

    Instance.new("UICorner", box).CornerRadius = UDim.new(0, 8)

    -- Image
    local image = Instance.new("ImageLabel")
    image.Size = UDim2.new(1, 0, 1, 0)
    image.BackgroundTransparency = 1
    image.Image = "rbxassetid://".. imageId
    image.ScaleType = Enum.ScaleType.Fit
    image.Parent = box

    -- Bottom overlay
    local overlay = Instance.new("Frame")
    overlay.Size = UDim2.new(1, 0, 0, 34)
    overlay.Position = UDim2.new(0, 0, 1, -34)
    overlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    overlay.BackgroundTransparency = 0.35
    overlay.Parent = box

    -- Clickable title button
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -16, 1, 0)
    button.Position = UDim2.new(0, 8, 0, 0)
    button.BackgroundTransparency = 1
    button.Text = title
    button.Font = Enum.Font.Gotham
    button.TextSize = 13
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextWrapped = true
    button.TextTruncate = Enum.TextTruncate.AtEnd
    button.TextXAlignment = Enum.TextXAlignment.Left
    button.AutoButtonColor = false
    button.Parent = overlay

    button.MouseButton1Click:Connect(function()
        if callback then
            callback()
        end
    end)

    -- Canvas resize
    local layout = self.Scroll:FindFirstChildWhichIsA("UIListLayout")
    if layout then
        local totalHeight = 0
        for _, v in ipairs(self.Scroll:GetChildren()) do
            if v:IsA("Frame") then
                totalHeight += v.Size.Y.Offset + layout.Padding.Offset
            end
        end
        self.Scroll.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
    end
end

------------------------------------------------

--//DEBUG
function Vero_UI:_bindDebugDestroy()
    UIS.InputBegan:Connect(function(input, gp)
        if gp then return end
        if not self.Gui then return end

        if input.KeyCode == Enum.KeyCode.Delete then
            if self.Gui then
                self.Gui:Destroy()
            end
        end
    end)
end

return Vero_UI
